<Window x:Class="Part1_ClaimSyst.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System"
        Height="600" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundLightBrush}">

    <Window.Resources>

        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#3498DB"/>
        <SolidColorBrush x:Key="PrimaryBlueDarkBrush" Color="#2980B9"/>
        <SolidColorBrush x:Key="RejectRedBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="RejectRedDarkBrush" Color="#C0392B"/>
        <SolidColorBrush x:Key="NeutralGreyBrush" Color="#BDC3C7"/>
        <SolidColorBrush x:Key="TextDarkBrush" Color="#2C3E50"/>
        <SolidColorBrush x:Key="BackgroundLightBrush" Color="#F4F6F9"/>
        <SolidColorBrush x:Key="TabGreyBrush" Color="#ECF0F1"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border> 
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBlueDarkBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RejectButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource RejectRedBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource RejectRedDarkBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style> 

        <Style x:Key="NeutralButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource NeutralGreyBrush}"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource TextDarkBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <TabControl Background="White">
      
            <TabItem Header="Lecturer Dashboard" Background="{StaticResource TabGreyBrush}">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Submit New Claim" FontSize="22" FontWeight="Bold"
                                   Foreground="{StaticResource TextDarkBrush}" Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Claim ID:" Width="130" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextDarkBrush}"/>
                            <TextBox Width="120" IsReadOnly="True" Text="CLM-0001"/>
                            <TextBlock Text="  Lecturer:" Margin="12,0,0,0" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextDarkBrush}"/>
                            <TextBox Width="220" Text="IC Lecturer 001"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Month:" Width="130" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextDarkBrush}"/>
                            <ComboBox Width="120">
                                <ComboBoxItem Content="01"/>
                                <ComboBoxItem Content="02"/>
                                <ComboBoxItem Content="03"/>
                                <ComboBoxItem Content="04"/>
                                <ComboBoxItem Content="05"/>
                                <ComboBoxItem Content="06"/>
                                <ComboBoxItem Content="07"/>
                                <ComboBoxItem Content="08" IsSelected="True"/>
                                <ComboBoxItem Content="09"/>
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="11"/>
                                <ComboBoxItem Content="12"/>
                            </ComboBox>

                            <TextBlock Text="  Year:" Margin="12,0,0,0" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextDarkBrush}"/>
                            <TextBox Width="100" Text="2025"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Claim Amount:" Width="130" VerticalAlignment="Center"
                                       Foreground="{StaticResource TextDarkBrush}"/>
                            <TextBox Width="220" Text="0.00"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Description:" Width="130" VerticalAlignment="Top"
                                       Foreground="{StaticResource TextDarkBrush}"/>
                            <TextBox Width="420" Height="70" AcceptsReturn="True" TextWrapping="Wrap"
                                     Text="Teaching hours and assessments for the period."/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Upload Document:" Width="130" VerticalAlignment="Top"
                                       Foreground="{StaticResource TextDarkBrush}"/>
                            <StackPanel>
                                <Button Content="Browse..." Style="{StaticResource NeutralButton}" Width="120"/>
                                <ListBox Margin="0,6,0,0" Height="90" Width="420">
                                    <ListBoxItem>ProofOfWork.pdf (123 KB)</ListBoxItem>
                                    <ListBoxItem>Timesheet_Sept.png (256 KB)</ListBoxItem>
                                </ListBox>
                            </StackPanel>
                        </StackPanel>

                        <Button Content="Submit Claim" Width="170" Height="45" Style="{StaticResource PrimaryButton}"/>


                        <Border Margin="0,15,0,0" Background="{StaticResource TabGreyBrush}" Padding="10" CornerRadius="6">
                            <TextBlock Foreground="{StaticResource TextDarkBrush}">
                                Status legend: Draft • Submitted • Verified • Approved • Rejected
                            </TextBlock>
                        </Border>

                        <Separator Margin="0,20,0,20"/>

                        <TextBlock Text="Track My Claims" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource TextDarkBrush}"/>

                        <ListView Height="220" Margin="0,10,0,0" AlternationCount="2">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Claim ID" Width="120"/>
                                    <GridViewColumn Header="Month" Width="80"/>
                                    <GridViewColumn Header="Year" Width="80"/>
                                    <GridViewColumn Header="Amount" Width="140"/>
                                    <GridViewColumn Header="Status" Width="160"/>
                                    <GridViewColumn Header="Submitted" Width="160"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Coordinator Dashboard" Background="{StaticResource TabGreyBrush}">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <GroupBox Header="Approved Claims" Margin="0,0,8,0">
                        <ListView Height="360" Margin="0,10,0,0" AlternationCount="2">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Claim ID" Width="100"/>
                                    <GridViewColumn Header="Lecturer" Width="160"/>
                                    <GridViewColumn Header="Amount" Width="120"/>
                                    <GridViewColumn Header="Date Submitted" Width="160"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>

                    <GroupBox Header="Rejected Claims" Grid.Column="1" Margin="8,0,0,0">
                        <ListView Height="360" Margin="0,10,0,0" AlternationCount="2">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Claim ID" Width="100"/>
                                    <GridViewColumn Header="Lecturer" Width="160"/>
                                    <GridViewColumn Header="Amount" Width="120"/>
                                    <GridViewColumn Header="Date Submitted" Width="160"/>
                                    <GridViewColumn Header="Reason" Width="200"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="Manager Dashboard" Background="{StaticResource TabGreyBrush}">
                <StackPanel Margin="20">
                    <TextBlock Text="Pending Claims for Approval" FontSize="22" FontWeight="Bold"
                               Foreground="{StaticResource TextDarkBrush}" Margin="0,0,0,15"/>

                    <ListView Height="350" Margin="0,10,0,0" AlternationCount="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Claim ID" Width="120"/>
                                <GridViewColumn Header="Lecturer" Width="180"/>
                                <GridViewColumn Header="Amount" Width="140"/>
                                <GridViewColumn Header="Date Submitted" Width="180"/>
                                <GridViewColumn Header="Status" Width="160"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Verify" Width="140" Height="45" Style="{StaticResource NeutralButton}"/>
                        <Button Content="Approve" Width="140" Height="45" Style="{StaticResource PrimaryButton}"/>
                        <Button Content="Reject" Width="140" Height="45" Style="{StaticResource RejectButton}"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
